<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:HotelProject.Model"
             x:Class="HotelProject.View.BookingPage"
             xmlns:viewmodel="clr-namespace:HotelProject.ViewModel"    
             x:DataType="viewmodel:BookingPageViewModel"
             Title="{Binding Room.RoomNumber, StringFormat='Booking For Room {0}'}">
    <VerticalStackLayout>
        <Entry x:Name="Name"
               Placeholder="Enter Name"/>
        <Entry x:Name="Gender"
               Placeholder="Enter Gender"/>
        <Entry x:Name="Age"
               Placeholder="Enter Age"/>
        <Entry x:Name="Phone"
               Placeholder="Enter Phone Number"/>
        <Grid Padding="10" ColumnDefinitions="30, *">
            <Label x:Name="Nights"
                    Text="1"
                    VerticalOptions="Center"/>
            <Stepper x:Name="NightsStepper"
                        Minimum="1"
                        Maximum="31"
                        Increment="1"
                        Value="1"                 
                        ValueChanged="OnStepperValueChanged"
                         Grid.Column="1"/>
        </Grid>
        <Button Text="Reserve" FontSize="18" 
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>